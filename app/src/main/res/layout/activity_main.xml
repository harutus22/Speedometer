<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activiity.MainActivity">

    <com.example.apple.speedometr.customview.MyCustomView
        android:id="@+id/speedometer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.apple.speedometr.customview.CursorView
        android:id="@+id/cursor"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/gasBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accelerate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:layout_marginStart="@dimen/button_margin_start"

        />

</android.support.constraint.ConstraintLayout>